<main class="posts-page container">
  <section class="posts" id="posts" data-turbo-action="replace">
    <% if @posts.any? %>
      <%= render @posts %>
    <% else %>
      <p>Nenhum post ainda.</p>
    <% end %>
  </section>

  <aside>
    <%= render current_user %>

    <section class="suggestions">
      <h4>Sugestões Para Você</h4>

      <%= render @suggested_users %>
    </section>
  </aside>

  <footer>
    © <%= Date.current.year %> INSTAGRAM CLONE
  </footer>
</main>
